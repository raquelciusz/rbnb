<div class="container-fluid">

  <%= simple_form_for(@car) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="d-md-flex justify-content-around m-3" id="form-bg">
      <div class="col-md-6">
        <%= f.input :model, placeholder: 'Model' %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.input :year, placeholder: 'Year' %>
        <%= f.input :description, placeholder: 'Description' %>
        <%= f.input :color, placeholder: 'Color' %>
      </div>
      <div class="col-md-6">
        <%= f.input :km, placeholder: 'Kilometers' %>
        <%= f.input :price, placeholder: 'Price' %>
        <%= f.input :location, placeholder: 'Location' %>
        <%= f.submit class: 'btn btn-outline-dark hover:text-primary rounded-pill shadow-sm border px-4' %>
        <%= link_to "Back", "/", class: 'btn btn-outline-dark hover:text-primary rounded-pill shadow-sm border px-4' %>
      </div>
    </div>
  <% end %>
</div>
